<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyTransitionStyle">
        <item name="android:fragmentFadeEnterAnimation">@animator/flip_left_in</item>
        <item name="android:fragmentFadeExitAnimation">@animator/flip_left_out</item>
        <item name="android:fragmentOpenEnterAnimation">@animator/flip_left_in</item>
        <item name="android:fragmentOpenExitAnimation">@animator/flip_right_out</item>
        <item name="android:fragmentCloseEnterAnimation">@animator/flip_right_in</item>
        <item name="android:fragmentCloseExitAnimation">@animator/flip_left_out</item>
    </style>
</resources>
