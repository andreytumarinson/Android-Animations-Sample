        <!--<tutorial_item name="android:windowSharedElementsUseOverlay">false</tutorial_item>-->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar.TransparentStatus">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="CircleTheme" parent="AppTheme.NoActionBar.TransparentStatus">
        <item name="colorAccent">@color/newAccent</item>
    </style>
    <!--<style name="CircleTheme" parent="Theme.MaterialComponents.Light">
        <tutorial_item name="colorAccent">@color/newAccent</tutorial_item>
        <tutorial_item name="windowActionBar">false</tutorial_item>
        <tutorial_item name="windowNoTitle">true</tutorial_item>
        <tutorial_item name="android:windowTranslucentStatus">true</tutorial_item>
    </style>-->
    <style name="RevealTheme" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyTransitionStyle">
        <item name="android:fragmentFadeEnterAnimation">@animator/flip_left_in</item>
        <item name="android:fragmentFadeExitAnimation">@animator/flip_left_out</item>
        <item name="android:fragmentOpenEnterAnimation">@animator/flip_left_in</item>
        <item name="android:fragmentOpenExitAnimation">@animator/flip_right_out</item>
        <item name="android:fragmentCloseEnterAnimation">@animator/flip_right_in</item>
        <item name="android:fragmentCloseExitAnimation">@animator/flip_left_out</item>
    </style>
    <style name="ActivityTransitions" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/scale_up</item>
        <item name="android:activityOpenExitAnimation">@anim/scale_down</item>
        <item name="android:activityCloseEnterAnimation">@anim/scale_up</item>
        <item name="android:activityCloseExitAnimation">@anim/scale_down</item>
    </style>
</resources>
